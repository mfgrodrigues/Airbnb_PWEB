@model IEnumerable<Airbnb_PWEB.Models.Evaluation>

<h1>Property Reviews</h1>
<div class="card shadow mb-4 col-12">
    <div class="card-header py-3">
<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                Client
            </th>
            <th>
                Classification
            </th>
            <th>
                Comment
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Reservation.ApplicationUser.Email
                </td>
                <td>
                    @item.Classification
                </td>
                <td>
                    @item.Comment
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
@section Scripts{
    <script>
    $(document).ready(function () {
        $('#mytable').DataTable();
    });
    </script>
}