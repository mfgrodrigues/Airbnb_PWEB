@model Airbnb_PWEB.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow mb-4 col-10">
    <div  class="card-header py-3">
       <h4>Add Comment</h4>
       </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReservationId" />
            <div class="form-group">
                <label asp-for="ApprovalComment" class="control-label"></label>
                <textarea asp-for="ApprovalComment" class="form-control"></textarea>
                <span asp-validation-for="ApprovalComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
<div>
    <a asp-action="Index" asp-route-id="@Model.PropertyId">Back to List</a>
</div>
    </div>

