@model IEnumerable<Airbnb_PWEB.Models.CheckList>

@{
    ViewData["Title"] = "Index";
}

<h1>CheckList Categories</h1>
<div class="card shadow mb-4 col-12">
      <div class="card-header py-3">
<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-controller="CheckItems" asp-action="Create" asp-route-id="@item.CheckListId">Add Item</a> |
                    <a asp-controller="CheckItems" asp-action="Index" asp-route-id="@item.CheckListId">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>



@section Scripts{
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable();
        });
    </script>
}