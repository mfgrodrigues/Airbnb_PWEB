@model IEnumerable<Airbnb_PWEB.Models.Property>

@{
    ViewData["Title"] = "Index";
}

<h1>Properties</h1>

<div class="card-header py-3">
    @if (User.IsInRole("Owner_Manager"))
    {
        <a class="m-0 font-weight-bold text-primary" asp-action="Create">Add Property</a>
    }
</div>
<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                Property
            </th>
            <th>
                Category
            </th>
            <th>
                Tittle
            </th>
            <th>
                Price/Night
            </th>
            <th>
                City
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    <img class="img-thumbnail" src="data:@item.Images[0].FileType;base64,@Convert.ToBase64String(item.Images[0].Data, 0, item.Images[0].Data.Length)" style="width:250px;height:auto">
                </th>

                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tittle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pricePerNigth) €
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td width="11%">
                    @if (User.IsInRole("Owner_Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"><img src="resources/edit.svg" width="30%" alt="Editar" /></a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="resources/details.svg" width="30%" alt="Detalhes" /></a>
                    @if (User.IsInRole("Owner_Manager"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id"><img src="resources/delete.svg" width="30%" alt="Remover" /></a>
                    }
                    <p></p> 
                    @if (User.IsInRole("Owner_Employeer") || User.IsInRole("Owner_Manager") )
                    {
                        <a class="btn btn-primary" asp-controller="Reservations" asp-action="Index" asp-route-id="@item.Id"> Reservations</a>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
    $(document).ready(function () {
        $('#mytable').DataTable();
    });
    </script>
}
