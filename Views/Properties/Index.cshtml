@model IEnumerable<Airbnb_PWEB.Models.Property>

@{
    ViewData["Title"] = "Index";
}

<h1>Alojamentos</h1>

<p>
    <a asp-action="Create">Adicionar Novo Alojamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imóvel
            </th>
            <th>
                Título
            </th>
            <th>
                Descrição
            </th>
            <th>
                Preço/Noite
            </th>
            <th>
                Localização
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th> 
                <img class="img-thumbnail" src="data:@item.Images[0].FileType;base64,@Convert.ToBase64String(item.Images[0].Data, 0, item.Images[0].Data.Length)" style="width:250px;height:auto">
            </th>
                    
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pricePerNigth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td width = "11%">
                <a asp-action="Edit" asp-route-id="@item.Id"><img src = "resources/edit.svg"  width = "30%" alt="Editar"/></a>
                <a asp-action="Details" asp-route-id="@item.Id"><img src = "resources/details.svg" width = "30%" alt="Detalhes"/></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><img src = "resources/delete.svg" width = "30%" alt="Remover"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
